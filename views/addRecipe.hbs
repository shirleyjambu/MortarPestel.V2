<div id="addNewText">Add New Recipe</div>
<div class="row">
    <div>
  {{#if errors}}
    {{#each errors}}
    <span style="color:red;">{{this.msg}}</span><br>
    {{/each}}
  {{/if}}
</div>
<div class="container my-container" id="recipeContainer">
<form id="addRecipe">
    
     <div class="row">
       <div class="input-field col s6">
         <label for="recipe_name" ></label>
         <input placeholder="Recipe Name" type="text" id="recipe_name" name ="recipe_name" class="validate">
       </div>
       <div class="input-field col s3 myOption">
         <select id="cuisineDropdown" class="materialSelect">
          <option value="0">Select Cuisine</option>
          </select>
       </div>
       <div class="input-field col s3 myOption">
         <select id="categoryDropdown" class="materialSelect">
          <option value="0">Select Category</option>
          </select>
       </div>
     </div>

       <div class="file-field input-field s6">
         <div class="col s1">
           <input type="file" id="image-input">
           <label for="image-input">
             <i class="material-icons prefix tooltipped" data-position="right" data-tooltip="Attach File">attach_file</i>
           </label>
         </div>
         <div class="file-path-wrapper">
           <input class="file-path validate" type="text" placeholder="Recipe Image">
         </div>
       </div>
  
     <!-- Create Ingredient Row -->
      <div class="row">
        <div><h6>Ingredients Required : <i class="material-icons prefix moreIngredients">add_circle</i></h6></div>
        <div class="row">
          <table id="ingredientTable" class="p1">

          </table>
        </div>
      </div>
     <!-- End of Ingredients-->
     
     <div class="col s12" id="quillBar">
       <div id="editor" name="recipe_instruction" style="height:250px;color:black;">
       </div>
     </div>
     
     <div class="col s6">
       <button class="waves-effect waves-light" id="addBtnRecipe" type="submit" name="action">Add Recipe
         <i class="material-icons right">touch_app</i>
       </button>
     </div>

 </div>
 <br><br>
</form>

</div>
<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
  var options = {
  debug: 'info',
  modules: {
    toolbar: [
      ['bold','italic','underline'],
      [{header:[1,2,3,4,5,6]}],
      ['color']
    ]
  },
  placeholder: 'Recipe Instructions ...',
  readOnly: false,
  theme: 'snow'
};
var editor = new Quill('#editor', options);
</script>
<script src="/assets/js/addRecipe.js"></script>