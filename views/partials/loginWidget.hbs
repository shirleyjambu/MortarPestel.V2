<div class="col s12 m4">
  <div class="card Panel">
    <div class="card-content">
      <div>
        <span class="card-title">Login For More</span>
        <!-- Login Card-->
        <!--Successful Login -->
        {{#if userCreated}}
          <span style="color:green;">{{userCreated}}</span><br>
         {{/if}}
         <!-- User Not Found -->
         {{#if userNotFound}}
          <span style="color:red;">{{userNotFound}}</span><br>
         {{/if}}
        <!--Errors-->
        {{#if errors}}
          {{#each errors}}
          <span style="color:red;">{{this.msg}}</span><br>
          {{/each}}
        {{/if}}
        <form action="/api/login" method="POST">
          <div class="form-group">
            <label for="name">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="Enter password">
          </div>
          <input type="submit">
        </form>
      </div>
      <!-- New User -->
      <div>
        <a href="/addUser"><button id="new_user" class="waves-effect">New User</button></a>
      </div>  
    </div>
  </div>
</div>
<script src="/assets/js/login.js"></script>