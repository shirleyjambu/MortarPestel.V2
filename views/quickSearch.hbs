

<form action="/quickSearch?ingredient" method="GET">
  <div class="input-field" id="textIngred" >
    <input placeholder="Enter Ingredient" name="ingredient" type="text" class="validate">
    <button type="submit" class="btn dark" id="searchbyIng">Quick Search</button>
  </div>
  <div id="errorMsg">{{errorMsg}}</div>
</form>

<div class="row">
  {{#each recipeData}}
  <div class="col s12 m4 l4 p-2">
    <div class="card small">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="{{recipe.image}}">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">{{recipe.label}}<i class="material-icons right">more_vert</i></span>
      <p><a href="{{recipe.url}}" target="new" id="recipeClick">Click for Recipe</a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">
        {{recipe.label}}<i class="material-icons right">close</i>
      </span>
      <p>{{recipe.ingredientLines}}</p>
    </div>
  </div>

</div>
{{/each}}
</div>